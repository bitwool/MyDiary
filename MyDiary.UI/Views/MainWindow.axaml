<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MyDiary.UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="using:MyDiary.UI.Models"
        xmlns:views="clr-namespace:MyDiary.UI.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MyDiary.UI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="MyDiary">
    <!-- <Design.DataContext> -->
    <!--     <vm:MainWindowViewModel /> -->
    <!-- </Design.DataContext> -->

    <Grid ColumnDefinitions="70,*" ShowGridLines="True">
        <Border Grid.Column="0" Background="#F0F0F0" Padding="5">
            <StackPanel Spacing="10">
                <Button Background="#F0F0F0" Command="{Binding ShowDiaryCommand }"
                        Content="{LucideIconContent Kind=Notebook, Size=30, StrokeWidth=1.2}" ToolTip.Tip="日记">
                </Button>
                <Button Background="#F0F0F0" Command="{Binding ShowToolBoxCommand}"
                        Content="{LucideIconContent Kind=ToolCase, Size=30, StrokeWidth=1.2}" ToolTip.Tip="工具箱">
                </Button>
            </StackPanel>
        </Border>

        <ContentControl Grid.Column="1" Content="{Binding ContentView}" />
    </Grid>
</Window>